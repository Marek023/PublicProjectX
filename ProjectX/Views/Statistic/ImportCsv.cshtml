<div class="modal fade" id="importModal" tabindex="-1" aria-labelledby="importModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="importModalLabel">Importovat CSV soubory</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Zavřít"></button>
            </div>
            <div class="modal-body">
                <form id="importForm" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="file1" class="form-label">Vyberte první CSV:</label>
                        <input type="file" class="form-control" id="file1" name="file1" accept=".csv">
                    </div>
                    <div class="mb-3">
                        <label for="file2" class="form-label">Vyberte druhé CSV:</label>
                        <input type="file" class="form-control" id="file2" name="file2" accept=".csv">
                    </div>
                    <div class="mb-3">
                        <label for="file3" class="form-label">Vyberte třetí CSV:</label>
                        <input type="file" class="form-control" id="file3" name="file3" accept=".csv">
                    </div>
                    <button type="button" class="btn btn-primary" onclick="uploadFiles()">Nahrát</button>
                </form>
            </div>
        </div>
    </div>
</div>